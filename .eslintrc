{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread" : true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": 0,
        "indent": ["error", "tab", { "SwitchCase": 1 }],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
		"react/prop-types": 0
    }
}