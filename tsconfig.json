{
	"compilerOptions": {
		"strict": true,
		"target": "es5",
		"module": "esnext",
		"moduleResolution": "node",
		"importHelpers": true, // importing helper functions from tslib
		"noEmitHelpers": true, // disable emitting inline helper functions
		"removeComments": true,
		"experimentalDecorators": true, // alow ES7 decorators (MobX)
		"esModuleInterop": true, // required for Jest tests
		"baseUrl": "./src/scripts",
		"sourceMap": true,
		"jsx": "react",
		"lib": ["es6", "dom"],
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"pretty": true
	},
	"compileOnSave": false,
	"files": ["./src/scripts/index.tsx"],
	"include": ["./tests/**/*.ts", "./tests/**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}