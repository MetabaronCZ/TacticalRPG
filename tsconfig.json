{
	"compilerOptions": {
		"strict": true,
		"allowJs": true,
		//"checkJs": true,
		"target": "es6",
		"module": "es6",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src/js",
		"sourceMap": true,
		"jsx": "react",
		"lib": ["es6", "dom"],

		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true
	},
	"compileOnSave": false,
	"files": ["./src/js/app.tsx"],
	"exclude": ["node_modules"]
}
